<div class="card mx-auto py-10 text-center" style="width: 30rem;">
  <img class="card-img-top" src="<%= @movie.poster_url %>" alt="Card image cap">
  <div class="card-body mx-auto">
    <div class="card-title">
      <h3><%= @movie.title %> </h3>
    </div>
    <div class="card-text">
      <p><%= @movie.overview%></p>
    </div>
  </div>
  <%= link_to 'leave Review', movies_path(@movie), class: "btn btn-dark" %>
</div>
